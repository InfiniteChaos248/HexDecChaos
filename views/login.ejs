<div class="form-container">
    <form class="form" method="post" action="/login">
        <div class="form-field">
            <div class="form-field-label">Username</div>
            <div class="form-field-input"><input type="text" name="username" id="username" required></div>
        </div>
        <div class="form-field">
            <div class="form-field-label">Password</div>
            <div class="form-field-input"><input type="password" name="password" id="password" required></div>
        </div>
        <input class="submit-button" type="submit" value="Login">
        <div>Not registered? <a href="/signup">Signup</a></div>
        <% if (messages.error) { %>
            <%= messages.error %>
        <% } %>
      </form>
</div>